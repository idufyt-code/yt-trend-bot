{
  "builds": [
    {
      "src": "api/analyze.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/vite",
      "config": { "project": "frontend" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/analyze"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}
